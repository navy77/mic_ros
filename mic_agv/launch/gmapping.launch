<launch>
    <node name="diff_tf" pkg="mic_agv" type="odom_IMU.py" />

   <!-- connect pi pico  USB-->
  <node name="serial_node" pkg="rosserial_python" type="serial_node.py">
    <param name="port" type="string" value="/dev/ttyACM0" />
    <param name="baud" type="int" value="57600" />
  </node> 
  
  <node name="ydlidar_lidar_publisher" pkg="ydlidar_ros_driver" type="ydlidar_ros_driver_node" output="screen" respawn="false">
    <!-- string property -->
    <param name="port" type="string" value="/dev/ttyUSB0" />
    <param name="frame_id" type="string" value="laser_frame" />
    <param name="ignore_array" type="string" value="" />

    <!-- int property -->
    <param name="baudrate"         type="int" value="230400"/>  
    <!-- 0:TYPE_TOF, 1:TYPE_TRIANGLE, 2:TYPE_TOF_NET -->
    <param name="lidar_type"       type="int" value="1"/>  
    <!-- 0:YDLIDAR_TYPE_SERIAL, 1:YDLIDAR_TYPE_TCP -->
    <param name="device_type"         type="int" value="0"/>  
    <param name="sample_rate"         type="int" value="5"/>  
    <param name="abnormal_check_count"         type="int" value="4"/>  

    <!-- bool property -->
    <param name="resolution_fixed"    type="bool"   value="true"/>
    <param name="auto_reconnect"    type="bool"   value="true"/>
    <param name="reversion"    type="bool"   value="true"/>
    <param name="inverted"    type="bool"   value="true"/>
    <param name="isSingleChannel"    type="bool"   value="false"/>
    <param name="intensity"    type="bool"   value="true"/>
    <param name="support_motor_dtr"    type="bool"   value="false"/>
    <param name="invalid_range_is_inf"    type="bool"   value="false"/>
    <param name="point_cloud_preservative"    type="bool"   value="false"/>

    <!-- float property -->
    <param name="angle_min"    type="double" value="-75" />
    <param name="angle_max"    type="double" value="75" />
    <param name="range_min"    type="double" value="0.15" />
    <param name="range_max"    type="double" value="16.0" />
    <param name="frequency"    type="double" value="10.0"/>
  </node>

  <!-- tf lidar -->
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser4"
    args="0.05 0.0 0.2 0.0 0.0 0.0 /base_link /laser_frame 40" />

    <!-- Gmapping -->
    <node pkg="gmapping" type="slam_gmapping" name="maping_node">
        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_frame"  value="map"/>
        <rosparam command="load" file="$(find mic_agv)/config/gmapping_params.yaml" />
    </node>

</launch>
